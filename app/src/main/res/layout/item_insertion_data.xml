<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="10dp"
    app:cardElevation="5dp"
    android:layout_marginLeft="2sp"
    android:layout_marginRight="2sp"
    android:layout_marginTop="2sp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/packagingPartnoTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5"
                android:text="Pack part"
                android:textColor="@color/white"
                android:background="@drawable/bg_edt_lead2" />
            <TextView
                android:id="@+id/tvItemCodeItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Itemcode"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_edt_lead"
                />
            <TextView
                android:id="@+id/tvPickerNameItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:background="@drawable/bg_edt_lead"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/invoicePartnoTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5"
                android:text="Invoice part"
                android:background="@drawable/bg_edt_lead2"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/packagingQtyTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="PQty"
                android:background="@drawable/bg_edt_lead2"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/invoiceQtyTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="InQty"
                android:background="@drawable/bg_edt_lead2"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/confirmationTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="ok"
                android:background="@drawable/bg_edt_lead2"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:text="Date"
                android:background="@drawable/bg_edt_lead2"
                android:textColor="@color/white"/>






        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
