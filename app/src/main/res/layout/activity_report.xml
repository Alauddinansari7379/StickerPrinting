<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Report.Report">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#263026"
        android:layout_height="wrap_content">

<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/tvRegistration"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Report"-->
<!--            android:textColor="@color/white"-->
<!--            android:textStyle="bold">-->
<!--        </androidx.appcompat.widget.AppCompatTextView>-->
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?actionBarItemBackground"
            app:tint="@color/white">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:paddingVertical="5dp"
                android:text="Count- "
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tvcount"
                android:layout_width="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textStyle="bold"
                android:text="0"
                android:textColor="@color/black"
                android:background="@drawable/baseline_circle_24"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/layoutStartDate"
            android:layout_width="wrap_content"
            android:background="?actionBarItemBackground"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Start Date "
                android:textColor="@color/main_color"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/02/2000 "
                android:textColor="#686868"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/layoutEndDate"
            android:background="?actionBarItemBackground"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="End Date "
                android:textColor="@color/main_color"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/02/2000 "
                android:textColor="#686868"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableTint="#686868"
                android:textColor="@color/main_color"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSearch"
            android:layout_width="35dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:background="?actionBarItemBackground"
            android:src="@drawable/baseline_search_24">

        </androidx.appcompat.widget.AppCompatImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_marginTop="2sp"
        app:cardElevation="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/packagingPartnoTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="P Part"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_edt_lead2" />
                <TextView
                    android:id="@+id/tvItemCodeItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="Itemcode"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_edt_lead"
                    />
                <TextView
                    android:id="@+id/tvPickerNameItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_edt_lead"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/invoicePartnoTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="I Part"
                    android:background="@drawable/bg_edt_lead2"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/packagingQtyTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="PQty"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edt_lead2"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/invoiceQtyTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="InQty"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edt_lead2"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/confirmationTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Ok"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edt_lead2"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edt_lead2"
                    android:textColor="@color/black"/>






            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveFile"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="#86AC88"
            android:background="@drawable/roundedbutton"
            android:layout_height="wrap_content"
            android:text="Save File"/>
    </LinearLayout>

</LinearLayout>